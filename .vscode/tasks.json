{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc-7 build active file",
            "command": "/usr/bin/gcc",
            "args": [
                // "-fprofile-arcs",
                // "-ftest-coverage",
                // "-pg",
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}